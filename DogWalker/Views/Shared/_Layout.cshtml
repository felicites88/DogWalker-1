@using DogWalker.DAL

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dpg Walkers</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>

    @if (Session["UsuarioId"] != null)
    {
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active" style="margin-left:10px">
                @Html.ActionLink("Pesquisar Usuários", "PesquisarUsuarios", "Home", new { @class = "nav-link" })
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active" style="margin-left:10px">
                @Html.ActionLink("Solicitações", "Solicitacoes", "Usuario", new { @class = "nav-link" })
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active" style="margin-left:10px">
                @Html.ActionLink("Logout", "Logout", "Usuario", null, new { @class = "nav-link" })
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item active" style="margin-left:10px">
                @Html.ActionLink("Meus Passeios", "Passeios", "Usuario", null, new { @class = "nav-link" })
            </li>
        </ul>
    </nav>
    }


    <div id="content" class="container" style="margin-top:30px">
        @RenderBody()
    </div>

    <hr style="margin-top:30px" />
    <footer style="text-align:center">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Rafael Cardoso</p>
    </footer>
</body>

</html>
